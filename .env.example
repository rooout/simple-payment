# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False

# Xendit Configuration (Get from https://dashboard.xendit.co/)
# For demo/portfolio projects, use development keys even in production
XENDIT_SECRET_KEY=xnd_development_your_secret_key_here
XENDIT_PUBLIC_KEY=xnd_public_development_your_public_key_here
